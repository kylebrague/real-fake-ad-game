{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs":{
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "node_modules/**",
      "dist/scripts/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "performance": {
        "noDelete": "warn"
      },
      "style": {
        "useConst": "info"
      }
    },
    "ignore": [
      "sst-env.d.ts"
    ]
  },
  "formatter": {
    "ignore": [
      "sst-env.d.ts"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": true,
      "trailingCommas": "es5",
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "lineWidth": 100
    }
  }
}